<p id="notice"><%= notice %></p>

<h1>After Hours</h1>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @after_hours.each do |after_hour| %>
      <tr>
        <td><%= after_hour.name %></td>
        <td><%= after_hour.active %></td>
        <td><%= content_tag "a", 'Show', href: url_for(after_hour) %></td>
        <td><%= content_tag "a", 'Edit', href:edit_after_hour_path(after_hour) %></td>
        <td><%= content_tag "a", 'X',href: url_for( after_hour), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= content_tag "a", 'New After Hour', href: new_after_hour_path %>
